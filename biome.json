{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on"
				}
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noImportantStyles": "off"
			},
			"a11y": {
				"noSvgWithoutTitle": "error"
			},
			"style": {
				"noNonNullAssertion": "error"
			},
			"security": {
				"noDangerouslySetInnerHtml": "error"
			},
			"correctness": {
				"noUnusedFunctionParameters": "error",
				"useExhaustiveDependencies": "error"
			},
			"suspicious": {
				"noArrayIndexKey": "error"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always"
		}
	},
	"css": {
		"parser": {
			"cssModules": true,
			"tailwindDirectives": true
		},
		"formatter": {
			"enabled": true
		},
		"linter": {
			"enabled": true
		}
	},
	"files": {
		"includes": [
			"**/*.ts",
			"**/*.tsx",
			"**/*.js",
			"**/*.jsx",
			"**/*.json",
			"**/*.css",
			"!node_modules",
			"!.next",
			"!public"
		]
	}
}
